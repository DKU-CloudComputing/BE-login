pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('login'){
                    sh './gradlew clean build'
                }
            }
        }

        stage('Test') {
            steps {
                dir('login'){
                    sh './gradlew test'
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('login'){

                    sh '''
                    pwd
                    ls
                    docker build -t dipic/login-image .

                    '''
                }
            }
        }

        stage('Docker Push') {
            steps {
                script {
                    sh 'docker push dipic/login-image'
                }
            }
        }

        stage('Kubernetes Deploy') {
            steps {
                script {

                    sh 'kubectl apply -f login/deployment.yaml'
                    sh 'kubectl apply -f login/service.yaml'
                }
            }
        }
    }

    post {
        success {
            echo 'Build successed'
        }
        failure {
            echo 'Build failed'
        }
    }
}
